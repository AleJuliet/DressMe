<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="80dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="160dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/gold" />

                <TextView
                    android:id="@+id/alltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Best recommendations!"
                    android:textColor="#000000"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/alltext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Your outfit recommendations are based on your previous choices and preferences. Every time you add a new item of clothing, we will select the best match"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/alltext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Your preferences"
                android:textColor="#000000"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/alltext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Your color outfit preference:"
                android:textColor="#000000"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/gray"
                android:layout_height="wrap_content">


            <TextView
                android:layout_height="200dip"
                android:layout_width="wrap_content"
                android:id="@+id/test"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="-72dp"
                android:textColor="#000000"
                android:gravity="center"
                android:rotation="-90"
                android:textSize="12dp"
                android:text="Your pants color preference"/>
            <!--<com.jjoe64.graphview.GraphView-->
            <!--android:layout_height="200dip"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:id="@+id/graph" />-->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart2"

                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="280dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="-15dp"
                    android:layout_marginBottom="160dp"
                    android:animateLayoutChanges="true"
                    android:layout_below="@id/chart2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/alltext5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Your tops/shirts colors"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="12dp" />
                </LinearLayout>

            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="160dp"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>



        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
